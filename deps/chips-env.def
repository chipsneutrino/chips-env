Bootstrap: library
From: ubuntu:18.04
Stage: build

%labels
    name chips-env

%files
    ../setup.sh /opt

%post
    # Install chips-env software requirements using apt
    apt-get install -y --no-install-recommends software-properties-common
    apt-get update 
    add-apt-repository universe
    apt-get install -y --no-install-recommends libgsl-dev wget tar git dpkg-dev \
        cmake g++ gcc binutils libx11-dev libxpm-dev libxft-dev libxext-dev python-dev 
    apt-get clean
    rm -rf /var/lib/apt/lists/*

    # Install chips-env software using the setup.sh script
    chmod +x /opt/setup.sh
    ./opt/setup.sh

%runscript
    echo "chips-env"